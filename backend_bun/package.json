{
  "name": "contabilidade-igrejinha-backend-bun",
  "version": "1.0.0",
  "description": "Backend API otimizado com Bun para sistema de contabilidade especializado em organizações religiosas",
  "main": "src/server.ts",
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/server.ts",
    "build": "bun build src/server.ts --outdir ./dist --target bun",
    "start": "bun dist/server.js",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "db:generate": "bunx prisma generate",
    "db:push": "bunx prisma db push",
    "db:migrate": "bunx prisma migrate dev",
    "db:studio": "bunx prisma studio",
    "db:seed": "bun run prisma/seed.ts",
    "seed": "bun run prisma/seed.ts",
    "lint": "bunx eslint src/**/*.ts",
    "format": "bunx prettier --write src/**/*.ts"
  },
  "keywords": [
    "contabilidade",
    "igreja",
    "api",
    "typescript",
    "bun",
    "prisma",
    "postgresql"
  ],
  "author": "Contabilidade Igrejinha",
  "license": "MIT",
  "dependencies": {
    "@hono/zod-validator": "^0.7.2",
    "@prisma/client": "^5.22.0",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "hono": "^4.9.2",
    "jsonwebtoken": "^9.0.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.19",
    "@types/jsonwebtoken": "^9.0.7",
    "eslint": "^9.13.0",
    "prettier": "^3.3.3",
    "prisma": "^5.22.0",
    "typescript": "^5.9.2"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}